<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent" 
	android:background="@drawable/bg_generic"
	android:clipChildren="false">

	<ImageButton android:id="@+id/Title_AboutUs" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true" 
		android:layout_marginRight="5dp"
		android:layout_marginBottom="5dp" 
		android:background="@drawable/title_logo_mini_selector"
		/>

	<LinearLayout android:id="@+id/Title_Banner"
		android:layout_width="wrap_content"
		android:orientation="horizontal" 
		android:layout_height="fill_parent">
		
		<View android:id="@+id/Title_Banner_Trim1" 
			android:layout_height="wrap_content" 
			android:background="@color/genericBG_trim"
			android:layout_width="5dp"
			/>
			
		<View android:id="@+id/Title_Banner_BG" 
			android:layout_height="fill_parent"
			android:layout_width="60dp" 
			android:background="@color/black"
			/>
			
		<View android:id="@+id/Title_Banner_Trim2" 
			android:layout_height="wrap_content" 
			android:background="@color/genericBG_trim"
			android:layout_width="5dp"
			/>
			
	</LinearLayout>
	
	<LinearLayout android:id="@+id/Title_Menu"
		android:orientation="vertical" 
		android:clipChildren="false"
		android:layout_width="fill_parent" 
		android:layout_centerVertical="true"
		android:layout_height="fill_parent">

		<ImageView android:id="@+id/Title_Title"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:background="@drawable/title_title" 
			android:layout_gravity="center"
			android:layout_marginTop="20dp" 
			android:layout_marginBottom="15dp"
			/>
			
		<RelativeLayout android:id="@+id/Title_Menu_1"
			android:layout_height="fill_parent" 
			android:layout_weight="1"
			android:layout_width="wrap_content" 
			android:layout_marginLeft="30dp">
			
			<TextView android:id="@+id/Title_PlayText"
				android:text="Play" 
				android:textColor="@color/teamB_text" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_marginLeft="80dp"
				android:layout_marginTop="10dp" 
				android:gravity="center"
				android:textSize="42dp" 
				android:layout_centerVertical="true"
				/>
				
			<ImageButton android:id="@+id/Title_PlayButton"
				android:background="@drawable/title_play"
				android:layout_centerVertical="true" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				/>

			<View android:id="@+id/Title_PlayDelegate"
				android:layout_height="fill_parent" 
				android:layout_width="180dp"
				/>

		</RelativeLayout>
		
		<RelativeLayout android:id="@+id/Title_Menu_2"
			android:clipChildren="false" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:layout_weight="1"
			android:layout_marginLeft="30dp">
			
			<TextView android:id="@+id/Title_BuzzText"
				android:textSize="42dp" 
				android:text="Buzz"
				android:textColor="@color/teamC_text" 
				android:gravity="center_vertical" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_marginLeft="80dp"
				android:layout_marginTop="10dp" 
				android:layout_centerVertical="true"
				/>
				
			<ImageButton android:id="@+id/Title_BuzzButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/title_buzzer"
				android:layout_centerVertical="true"
				/>

			<View android:id="@+id/Title_BuzzDelegate"
				android:layout_height="fill_parent" 
				android:layout_width="200dp"
				/>

		</RelativeLayout>
		
		<RelativeLayout android:id="@+id/Title_Menu_3"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1" 
			android:layout_marginLeft="30dp">
			
			<TextView android:layout_width="wrap_content"
				android:textSize="42dp" 
				android:id="@+id/Title_SettingsText"
				android:text="Settings" 
				android:textColor="@color/teamD_text"
				android:gravity="center_vertical" 
				android:layout_height="wrap_content" 
				android:layout_marginLeft="80dp"
				android:layout_marginTop="10dp" 
				android:layout_centerVertical="true"
				/>
				
			<ImageButton android:id="@+id/Title_SettingsButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/title_settings"
				android:layout_centerVertical="true"
				/>
				
			<View android:id="@+id/Title_SettingsDelegate"
				android:layout_width="240dp" 
				android:layout_height="fill_parent"
				/>

		</RelativeLayout>
		
		<RelativeLayout android:id="@+id/Title_Menu_4"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1" 
			android:layout_marginLeft="30dp">
			
			<TextView android:id="@+id/Title_RulesText"
				android:text="Rules" 
				android:textSize="42dp" 
				android:textColor="@color/teamA_text"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:layout_marginLeft="80dp" 
				android:layout_marginTop="10dp" 
				android:gravity="center_vertical"
				android:layout_centerVertical="true"
				/>
				
			<ImageButton android:id="@+id/Title_RulesButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/title_rules"
				android:layout_centerVertical="true"
				/>
				
			<View  android:id="@+id/Title_RulesDelegate"
				android:layout_height="fill_parent"
				android:layout_width="200dp"
				/>

		</RelativeLayout>

	</LinearLayout>
	
	<LinearLayout android:id="@+id/Title_Banner_Hider" 
		android:layout_width="wrap_content"
		android:orientation="horizontal" 
		android:layout_height="fill_parent"
		android:layout_alignLeft="@id/Title_Banner" 
		android:layout_marginLeft="5dp">
		
		<View android:id="@+id/Title_Banner_Hider_BG" 
			android:background="@color/black" 
			android:layout_width="25dp" 
			android:layout_height="wrap_content"
			/>

	</LinearLayout>

</RelativeLayout>
