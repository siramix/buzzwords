<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bg_generic" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	
	<!--  The Buzzer Mode label -->
	<ImageView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginTop="20dp" 
		android:background="@drawable/buzzer_title"
		android:layout_gravity="center"
		/>
		
	<!--  Relative layout allows button to be centered -->
	<RelativeLayout 
		android:layout_height="fill_parent"
		android:layout_width="fill_parent">
		
		<ImageButton android:id="@+id/Buzzer_Button"
			android:background="@drawable/buzzer_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_centerInParent="true"
			/>
			
	</RelativeLayout>
	
</LinearLayout>
